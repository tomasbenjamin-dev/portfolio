---
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro"

import '../styles/global.css';
import '@fontsource-variable/onest';
---

<!doctype html>
<html lang="es" class="text-zinc-100">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Portfolio de Tomas Ponce</title>
	</head>
	<body>
		<div class="fixed inset-0 -z-10 w-full min-h-full bg-neutral-950 bg-[radial-gradient(ellipse_80%_80%_at_50%_-20%,rgba(120,119,198,0.3),rgba(255,255,255,0))]"></div>

		
		<Header />
		<slot />
		<Footer/>
		
	</body>
</html>

<style>
	:root{
		color-scheme: light dark;
		
	}
	
	body{
		background-color: #050505;
		display: flex;
		align-items: center;
		flex-direction: column;
		min-height: 100vh;
		
	}
	
	html, body {
  		scroll-behavior: smooth;
	}

	@media (prefers-reduced-motion: reduce) {
  		html, body {
    		scroll-behavior: auto;
  		}
	}



</style>
