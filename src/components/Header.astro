---
const navLinksStyle = "relative inline-block text-white px-2 py-1 before:content-[''] before:absolute before:left-1/2 before:bottom-0 before:w-0 before:h-[2px] before:transition-all before:duration-300 hover:before:w-full hover:before:left-0 before:hover:left-1/2 before:hover:w-0 hover:text-sky-600 transition-colors duration-300 before:rounded-full hover:before:bg-sky-600 ";
---

<header class="flex justify-center items-center mx-auto fixed px-3  rounded-full mt-3 z-999">
  <div class="flex flex-col items-center">
    <nav class="font-medium text-sm text-gray-200 text-center rounded-full flex gap-3 py-2">
      <a href="#top" class={navLinksStyle}>Inicio</a>
      <a href="#projects" class={navLinksStyle}>Proyectos</a>
      <a href="#about" class={navLinksStyle}>About</a>
      <a href="#skills" class={navLinksStyle}>Habilidades</a>
    </nav>
  </div>   
</header>

<script>
  window.addEventListener('DOMContentLoaded', () => {
    const header = document.querySelector('header');
    window.addEventListener('scroll', () => {
      if (window.scrollY > 50) {
        header.classList.add('scrolled');
      } else {
        header.classList.remove('scrolled');
      }
    });
  });
</script>

<style>
  header {
    background-color: transparent;
    transition: background-color 0.3s ease, box-shadow 0.3s ease;
  }

  header.scrolled {
    background-color: rgba(15, 23, 42, 0.9);
    box-shadow: 0 4px 12px rgb(0 0 0 / 0.3);
    backdrop-filter: blur(10px);
  }
</style>
